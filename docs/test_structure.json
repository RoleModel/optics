  --rm-color-primary-hover:     var(--rm-color-primary-luminosity-50);
  --rm-color-primary-base:      var(--rm-color-primary-luminosity-40);
  --rm-color-primary-minus-1:   var(--rm-color-primary-luminosity-30);
  --rm-color-primary-minus-2:   var(--rm-color-primary-luminosity-20);
  --rm-color-primary-minus-3:   var(--rm-color-primary-luminosity-10);
