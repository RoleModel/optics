{
  "extends": ["stylelint-config-idiomatic-order"],
  "plugins": ["stylelint-prettier"],
  "overrides": [],
  "rules": {
    "prettier/prettier": true,
    "custom-property-pattern": [
      "(?<=op-)",
      {
        "message": "CSS variables should be prefixed with op-"
      }
    ],
    "selector-class-pattern": null
  }
}
